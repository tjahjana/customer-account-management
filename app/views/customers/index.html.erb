<p id="notice"><%= notice %></p>

<h1>Adding Customers</h1>

<%= form_for(@customer, remote: true) do |f| %>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
    <%= f.label :tax %><br>
    <%= f.text_field :tax %>
    <p>
    <%= f.submit %>
    </p>
<% end %>
<br>
<h1>Listing Customers</h1>
<table>
<thead>
<tr>
  <th>Email</th>
  <th>Name</th>
  <th>Address</th>
  <th>Tax ID</th>
</tr>
</thead>

<tbody id="customer">
  <%= render @customers %>
</tbody>

  </table>



