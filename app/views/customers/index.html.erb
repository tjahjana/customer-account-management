<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.email %></td>
        <td><%= customer.name %></td>
        <td><%= customer.address %></td>
        <td><%= customer.tax %></td>
        <td><%= link_to 'Show', customer , id: "button-show-#{customer.id}"%></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), id: "button-edit-#{customer.id}" %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } ,
                        id: "button-delete-#{customer.id}"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

